<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragementes.LoginFragment"
    android:background="@drawable/download">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="sign In"
            android:id="@+id/sign_in"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_margin="50dp"
            android:textColor="@color/white"
            android:textSize="35dp"/>

        <EditText
            android:id="@+id/edit_utilisateur"
            android:hint="Utilisateur"
            android:layout_below="@id/sign_in"
            android:textColor="@color/white"
            android:layout_margin="10dp"
            android:padding="20dp"
            android:background="#30ffffff"
            android:textColorHint="@color/white"
            android:layout_width="match_parent"
            android:drawableLeft="@drawable/ic_baseline_person_outline_24"
            android:drawablePadding="20dp"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/edit_mdp"
            android:hint="Mot de passe"
            android:layout_below="@id/edit_utilisateur"
            android:textColor="@color/white"
            android:layout_margin="10dp"
            android:padding="20dp"
            android:background="#30ffffff"
            android:textColorHint="@color/white"
            android:layout_width="match_parent"
            android:inputType="textPassword"
            android:drawableLeft="@drawable/ic_baseline_info_24"
            android:drawablePadding="20dp"
            android:layout_height="wrap_content"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_login"
            android:text="Login"
            android:layout_below="@id/edit_mdp"
            android:backgroundTint="#3C392A"
            android:layout_centerHorizontal="true"
            android:layout_margin="20dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_creercompte"
            android:text="Creer un Compte"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/btn_login"/>
    </LinearLayout>

</FrameLayout>