<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/txt_item_prod_tele"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/clr2"
        android:padding="15dp"
        app:layout_constraintEnd_toEndOf="@+id/txt_item_prod_nom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_item_prod_nom" />

    <TextView
        android:id="@+id/txt_item_prod_nom"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:background="@color/clr4"
        android:padding="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_item_prod_cin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/clr1"
        android:padding="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/txt_item_prod_nom"
        app:layout_constraintEnd_toStartOf="@+id/btn_farms_item"
        app:layout_constraintStart_toEndOf="@+id/txt_item_prod_nom"
        app:layout_constraintTop_toTopOf="@+id/txt_item_prod_nom" />

    <TextView
        android:id="@+id/txt_item_prod_adresse"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/clr3"
        android:padding="15dp"
        app:layout_constraintEnd_toEndOf="@+id/txt_item_prod_cin"
        app:layout_constraintStart_toEndOf="@+id/txt_item_prod_nom"
        app:layout_constraintTop_toBottomOf="@+id/txt_item_prod_cin" />

    <Button
        android:id="@+id/btn_farms_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="5dp"
        android:text="Farm"
        app:layout_constraintBottom_toBottomOf="@+id/txt_item_prod_adresse"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txt_item_prod_cin"
        app:layout_constraintTop_toTopOf="@+id/txt_item_prod_cin" />

</androidx.constraintlayout.widget.ConstraintLayout>