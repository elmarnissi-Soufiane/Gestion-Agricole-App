<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragementes.RegisterFragment"
    android:background="@drawable/download">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Créer Compte"
            android:id="@+id/sign_in"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_margin="50dp"
            android:textColor="@color/white"
            android:textSize="35dp"/>

        <EditText
            android:id="@+id/edit_utilisateur1"
            android:hint="Nom"
            android:layout_below="@id/sign_in"
            android:textColor="@color/white"
            android:layout_margin="10dp"
            android:padding="20dp"
            android:background="#30ffffff"
            android:textColorHint="@color/white"
            android:layout_width="match_parent"
            android:drawableLeft="@drawable/ic_baseline_person_outline_24"
            android:drawablePadding="20dp"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/edit_utilisateur2"
            android:hint="Email"
            android:textColor="@color/white"
            android:layout_below="@id/edit_utilisateur1"
            android:layout_margin="10dp"
            android:padding="20dp"
            android:background="#30ffffff"
            android:textColorHint="@color/white"
            android:layout_width="match_parent"
            android:drawableLeft="@drawable/ic_baseline_person_outline_24"
            android:drawablePadding="20dp"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/edit_mdp1"
            android:hint="Mot de passe"
            android:layout_below="@id/edit_utilisateur2"
            android:textColor="@color/white"
            android:layout_margin="10dp"
            android:padding="20dp"
            android:background="#30ffffff"
            android:textColorHint="@color/white"
            android:layout_width="match_parent"
            android:drawableLeft="@drawable/ic_baseline_info_24"
            android:drawablePadding="20dp"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/edit_mdp2"
            android:hint="Confirmation"
            android:layout_below="@id/edit_mdp1"
            android:textColor="@color/white"
            android:layout_margin="10dp"
            android:padding="20dp"
            android:background="#30ffffff"
            android:textColorHint="@color/white"
            android:layout_width="match_parent"
            android:drawableLeft="@drawable/ic_baseline_info_24"
            android:drawablePadding="20dp"
            android:layout_height="wrap_content"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_creer"
            android:text="Créer"
            android:layout_below="@id/edit_mdp2"
            android:backgroundTint="#3C392A"
            android:layout_centerHorizontal="true"
            android:layout_margin="20dp"
            />

    </LinearLayout>

</FrameLayout>